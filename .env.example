# Google Cloud Platform
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
VERTEX_AI_LOCATION=us-central1

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Model Configuration
GEMINI_PRO_MODEL=gemini-3.0-pro
GEMINI_FLASH_MODEL=gemini-2.5-flash
EMBEDDING_MODEL=text-embedding-004

# Vector Store
VECTOR_SEARCH_INDEX_ID=your-vertex-ai-index-id
VECTOR_SEARCH_ENDPOINT=your-vertex-ai-endpoint

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# RAG Configuration
CHUNK_SIZE=2000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
RERANK_ENABLED=true

# Formula Student Rules
FSA_HANDBOOK_PATH=data/raw/FSA-Competition-Handbook-2025-version-1.3.0-8jmtzk3ybtb5j86b98z119ekyo.pdf
FS_RULES_PATH=data/raw/FS-Rules_2025_v1.1-opt973ooyjn77k8smjqu8ec4ur.pdf

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
